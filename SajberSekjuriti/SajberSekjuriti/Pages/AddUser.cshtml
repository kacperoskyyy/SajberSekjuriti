@page
@model SajberSekjuriti.Pages.AddUserModel
@{
    ViewData["Title"] = "Dodaj nowego użytkownika";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" />
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" />
                <label asp-for="Input.FullName"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" type="password" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Role" asp-items="Html.GetEnumSelectList<SajberSekjuriti.Model.UserRole>()" class="form-control"></select>
                <label asp-for="Input.Role"></label>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Stwórz użytkownika</button>

            <a asp-page="/AdminPanel" class="btn btn-secondary w-100 mt-2">Anuluj</a>
        </form>
    </div>
</div>