@* Zmiana polityki haseł dosepna w panelu admina*@
@page
@model SajberSekjuriti.Pages.PasswordPolicyModel
@{
    ViewData["Title"] = "Polityka Bezpieczeństwa Haseł";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Input.Id" />

            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Input.IsEnabled">
                <label class="form-check-label" asp-for="Input.IsEnabled">Włącz własne reguły złożoności hasła</label>
            </div>

            <div class="mb-3">
                <label asp-for="Input.MinimumLength" class="form-label"></label>
                <input asp-for="Input.MinimumLength" class="form-control" style="max-width: 100px;" />
                <span asp-validation-for="Input.MinimumLength" class="text-danger"></span>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" asp-for="Input.RequireDigit">
                <label class="form-check-label" asp-for="Input.RequireDigit">Wymagaj cyfry</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" asp-for="Input.RequireSpecialCharacter">
                <label class="form-check-label" asp-for="Input.RequireSpecialCharacter">Wymagaj znaku specjalnego</label>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Input.RequireUppercase">
                <label class="form-check-label" asp-for="Input.RequireUppercase">Wymagaj wielkiej litery</label>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="Input.PasswordExpirationDays" class="form-label"></label>
                <input asp-for="Input.PasswordExpirationDays" class="form-control" style="max-width: 100px;" />
                <span asp-validation-for="Input.PasswordExpirationDays" class="text-danger"></span>
            </div>

            <span asp-validation-for="Input.PasswordExpirationDays" class="text-danger"></span>

    <hr />
    <h3>Logowanie i Sesja</h3>

    <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Input.EnableAuditLog">
        <label class="form-check-label" asp-for="Input.EnableAuditLog">Włącz zapisywanie logów aktywności</label>
    </div>

    <div class="mb-3">
        <label asp-for="Input.MaxLoginAttempts" class="form-label"></label>
        <input asp-for="Input.MaxLoginAttempts" class="form-control" style="max-width: 100px;" />
        <span asp-validation-for="Input.MaxLoginAttempts" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.LockoutDurationMinutes" class="form-label"></label>
        <input asp-for="Input.LockoutDurationMinutes" class="form-control" style="max-width: 100px;" />
        <span asp-validation-for="Input.LockoutDurationMinutes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.SessionTimeoutMinutes" class="form-label"></label>
        <input asp-for="Input.SessionTimeoutMinutes" class="form-control" style="max-width: 100px;" />
        <span asp-validation-for="Input.SessionTimeoutMinutes" class="text-danger"></span>
    </div>

            <button type="submit" class="btn btn-primary">Zapisz ustawienia</button>
        </form>
    </div>
</div>