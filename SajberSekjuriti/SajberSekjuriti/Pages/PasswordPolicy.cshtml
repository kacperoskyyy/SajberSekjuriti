@page
@model SajberSekjuriti.Pages.PasswordPolicyModel
@{
    ViewData["Title"] = "Polityka Bezpieczeństwa Haseł";
}

<h1>@ViewData["Title"]</h1>
<p>Zarządzaj regułami złożoności i wygasania haseł dla wszystkich użytkowników.</p>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Settings.Id" />

            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Settings.IsEnabled">
                <label class="form-check-label" asp-for="Settings.IsEnabled"></label>
            </div>

            <div class="mb-3">
                <label asp-for="Settings.MinimumLength" class="form-label"></label>
                <input asp-for="Settings.MinimumLength" class="form-control" style="max-width: 100px;" />
                <span asp-validation-for="Settings.MinimumLength" class="text-danger"></span>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" asp-for="Settings.RequireDigit">
                <label class="form-check-label" asp-for="Settings.RequireDigit"></label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" asp-for="Settings.RequireSpecialCharacter">
                <label class="form-check-label" asp-for="Settings.RequireSpecialCharacter"></label>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Settings.RequireUppercase">
                <label class="form-check-label" asp-for="Settings.RequireUppercase"></label>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="Settings.PasswordExpirationDays" class="form-label"></label>
                <input asp-for="Settings.PasswordExpirationDays" class="form-control" style="max-width: 100px;" />
                <span asp-validation-for="Settings.PasswordExpirationDays" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz ustawienia</button>
        </form>
    </div>
</div>