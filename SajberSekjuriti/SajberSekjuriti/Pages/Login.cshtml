@* Panel do logowania *@
@page
@model SajberSekjuriti.Pages.LoginModel
@{
    ViewData["Title"] = "Logowanie";
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" />
                    <label asp-for="Input.Username"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <label asp-for="Input.Password"></label>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                </div>
                <div class="text-center mt-3">
                    <a asp-page="/Register">Nie masz konta? Zarejestruj się</a>
                </div>
            </form>
        </section>
    </div>
</div>