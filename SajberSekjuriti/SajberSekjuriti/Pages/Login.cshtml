@page
@model SajberSekjuriti.Pages.LoginModel
@{
    ViewData["Title"] = "Logowanie";
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" />
                    <label asp-for="Input.Username"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <label asp-for="Input.Password"></label>
                </div>
                
                
                <div class="form-group mb-3 p-3 bg-light border rounded">
                    <label class="form-label">Aby kontynuować, przepisz poniższy kod w <strong>odwrotnej kolejności</strong>:</label>
                    <div class="text-center my-2">
                        
                        <strong style="font-size: 1.5rem; letter-spacing: 3px; user-select: none;">
                            @Model.CaptchaCode
                        </strong>
                    </div>
                    <div class="form-floating">
                        
                        <input asp-for="Input.CaptchaInput" class="form-control" autocomplete="off" />
                        <label asp-for="Input.CaptchaInput"></label>
                        <span asp-validation-for="Input.CaptchaInput" class="text-danger"></span>
                    </div>
                </div>
                
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                </div>
                <div class="text-center mt-3">
                    <a asp-page="/Register">Nie masz konta? Zarejestruj się</a>
                </div>
            </form>
        </section>
    </div>
</div>