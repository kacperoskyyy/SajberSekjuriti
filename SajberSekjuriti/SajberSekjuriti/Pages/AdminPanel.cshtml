@* Panel admina *@
@page
@model SajberSekjuriti.Pages.AdminPanelModel
@{
    ViewData["Title"] = "Panel Administratora";
}

<h1>@ViewData["Title"]</h1>
<p>Zarządzanie użytkownikami systemu.</p>

<div class="mb-3">
    <a asp-page="/AddUser" class="btn btn-success">Dodaj nowego użytkownika</a>
    <a asp-page="/PasswordPolicy" class="btn btn-info">Ustaw Reguły Haseł</a>
    <a asp-page="/AuditLog" class="btn btn-secondary">Przeglądaj Logi</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Login</th>
            <th>Pełna nazwa</th>
            <th>Rola</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FullName</td>
                <td>@user.Role</td>
                <td>
                    @if (user.IsBlocked)
                    {
                        <span class="badge bg-danger">Zablokowany</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Aktywny</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                            <a asp-page="/EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edytuj</a>
                        @if (user.IsBlocked)
                        {
                            <form method="post" asp-page-handler="Unblock">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Odblokuj</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Block">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-warning">Zablokuj</button>
                            </form>
                        }

                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger ms-2">Usuń</button>
                        </form>

                        <form method="post" asp-page-handler="ForcePasswordChange">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-info ms-2">Wymuś zmianę hasła</button>
                        </form>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>